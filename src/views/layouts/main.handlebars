<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!--Importation du FrameWork BootStrap-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="css/styles.css">
    <title>Cinéfeel</title>
</head>
<body>
    <div class="container-fluid bg-primary">

        <nav id="navbar" class="container bg-secondary row m-auto py-3 align-items-center justify-content-between">
           
            {{!-- Logo --}}
            <div class="col-2">
                <img src="images/logo.png" alt="Website_logo" onclick="window.location.href='/'">
            </div>
           
            {{!-- Liste de films --}}
            <button class="btn btn-block btn-info col-2" onclick="window.location.href='../moviesList'">Liste de films</button>
            
            {{!-- Search Section --}}
            <form id="searchForm" method="POST" action="/search" class="col-5 d-flex align-items-center justify-content-between bg-info p-1">
                <input id="searchBar" name="researchValue" type="text" class="w-75" placeholder="Rechercher par un titre ou un réalisateur">
                <button type="submit">Rechercher</button>
            </form>

            {{!-- Section profil --}}
            <div class="d-flex col-2 bg-info d-flex justify-content-between">
                <details class="d-flex flex-column">
                    <summary>Profil</summary>
                    <a href="../my-movies" class="border-3">Vos films</a>
                    <a href="../my-favorites" class="border-3">Vos favoris</a>
                    <a href="../my-badges">Vos badges</a>
                    <hr>
                    {{!-- <a href="../">Profil</a>
                    <a href="../">Déconnexion</a>
                    <a href="../parameters.html">Paramètres</a> --}}
                    <a href="../login">Connexion</a>
                    <a href="../parameters">Paramètres</a>
                </details>
                <img src="" alt="Profil_picture" class="border rounded-circle">
            </div> 
        </nav>
    </div>

    <main>
        {{{body}}}
    </main>

    <footer class="bg-primary">
        <p>Voici le pied de page</p>
    </footer>
</body>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        // Sélectionne tous les conteneurs de cartes
        const cardContainers = document.querySelectorAll(".card-container");

        cardContainers.forEach(container => {
            // Sélectionne tous les boutons "Retourner" à l'intérieur du conteneur
            const buttons = container.querySelectorAll(".switchButton");

            buttons.forEach(button => {
                // Ajoute un événement de clic spécifique pour ce conteneur
                button.addEventListener("click", () => {
                    container.classList.toggle("flipped"); // Bascule uniquement ce conteneur
                });
            });
        });
    });
</script>
</html>