                        {{/each}}
                    </select>
                </div> --}}

                
                <div id="genreFilter" class="filter">
                    {{!-- ------------------------------------
                    <label for="genreSelect">Genres:</label>
                    <select name="genreSelect" id="genreSelect">
                        <option value="allGenres" selected>Tous</option>
                        {{#each genres}}
