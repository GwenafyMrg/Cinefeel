{{!-- Page HTML complète / Affichage en cas d'erreur : --}}
<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        {{!--Importation du FrameWork BootStrap : --}}
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"/>
        <link rel="stylesheet" href="css/styles.css">
        <title>Erreur</title>
    </head>
    <body>
        <div id="container_error">
            <div id="features_error">
                {{!-- Affichage de l'image d'erreur : --}}
                <img id="picture_error" src="https://github.com/GwenafyMrg/cinefeel-pictures-repo/blob/main/public/Error_logo.png?raw=true" alt="image_d_erreur">
                {{!-- Bouton de redirection : --}}
                <button onclick="window.location.href='/'">Retourner en lieu sûr</button>
            </div>

            {{!-- Conteneur d'affichage des informations à propos de l'erreur : --}}
            <div id="information_error">
                {{!-- Numéro de l'erreur HTTP : --}}
                <div id="number_error">Numéro d'erreur : <span>{{code_error}}</span></div>
                {{!-- Description de l'erreur : --}}
                <div id="text_error"><u>Description de l'erreur :</u> {{desc_error}}</div>
            </div>
        </div>
    </body>
</html>