{{!-- Page HTML complète / Affichage en cas d'erreur : --}}
<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        {{!--Importation du FrameWork BootStrap : --}}
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"/>
        <title>Erreur</title>
    </head>
    <body>
        <div id="container_error" class="container-fluid">
            {{!-- Affichage de l'image d'erreur : --}}
            <img id="picture_error" src="https://github.com/GwenafyMrg/cinefeel-pictures-repo/blob/main/public/Error_logo.png?raw=true" alt="image_d_erreur" class="m-2">

            {{!-- Conteneur d'affichage des informations à propos de l'erreur : --}}
            <div id="information_error" class="container bg-danger d-flex justify-content-around">
                {{!-- Numéro de l'erreur HTTP : --}}
                <div class="bg-warning p-2 m-1 w-25">Numéro d'erreur : {{code_error}}</div>
                {{!-- Description de l'erreur : --}}
                <div class="text-align-center bg-warning p-2 w-75 m-1">Description de l'erreur : {{desc_error}}</div>
            </div>

            {{!-- Bouton de redirection : --}}
            <div>
                <button class="btn btn-primary m-2" onclick="window.location.href='/'">Retourner en lieu sûr</button>
            </div>
        </div>
    </body>
</html>